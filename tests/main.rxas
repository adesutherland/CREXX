.globals=2

g1 .expose=my.exposed_global

main()         .locals=3
               load r1,"Hello"
               load r2,"Rene"
               sconcat r2,r1,r2
               ssay r2
               say "\n"

               load g0,100
               call say_module_g()

               load g1,101
               call say_exposed_g()

               load r0,"test - main() - calling func1()"
               ssay r0
               say "\n"
               call func1()
               load r0,"test - main() - calling func2()"
               ssay r0
               say "\n"
               call func2()
               ret

log()          .locals=1 .expose=my.log
               load r0,"Log: "
               ssay r0
               ssay a1
               say "\n"
               ret


say_module_g()   .locals=1
               load r0,"module global="
               imaster g0
               sprime g0
               concat r0,r0,g0
               ssay r0
               say "\n"
               ret

say_exposed_g()  .expose=global.say_exposed_g

func1()       .expose=global.func1

func2()       .expose=global.func2
